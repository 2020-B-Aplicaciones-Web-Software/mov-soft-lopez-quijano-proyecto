<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.proyecto_segundo_bimestre_lopez_quijano">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoSegundoBimestre_LopezQuijano">
        <activity
            android:name=".RegistrarUsuarios"
            android:exported="true" />
        <activity
            android:name=".AgregarLista"
            android:exported="true"
            android:label="Agregar Lista" />
        <activity
            android:name=".VisualizarActividad"
            android:exported="true" />
        <activity
            android:name=".CrearActividad"
            android:exported="true"
            android:label="Nueva Actividad" />
        <activity
            android:name=".ConfigurarLista"
            android:exported="true" />
        <activity
            android:name=".ListaDeActividades"
            android:exported="true"
            android:label="@string/title_activity_lista_de_actividades"
            android:theme="@style/Theme.ProyectoSegundoBimestre_LopezQuijano.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>